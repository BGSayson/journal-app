<div class="flex flex-col text-[2rem] items-center justify-center font-[Manrope] bg-gradient-to-bl from-orange-400 to-amber-200 w-full min-h-screen">
  
  <div class="bg-white p-3 rounded-[4px] text-[1.5rem] w-[700px] flex flex-col items-center justify-center gap-3">
    <h2 class="self-center justify-self-center text-[2rem] font-bold mb-3">Forgot your password?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field flex flex-col items-center justify-center gap-3">
        <%= f.label "Enter your email below:" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "border-[3px] rounded-[3px]" %>
      </div>

      <div class="actions flex flex-col items-start gap-2 mt-4">
        <%= f.submit "↪ Send me reset password instructions", class: "hover:text-[#5486e6] hover:underline hover:cursor-pointer font-bold"  %>
        <%= link_to "↪ Sign up", new_registration_path(resource_name), class: "hover:text-[#5486e6] hover:underline hover:cursor-pointer font-bold" %>
        <%= link_to "↩ Back to Sign in", new_user_session_path, class: "hover:text-[#5486e6] hover:underline hover:cursor-pointer font-bold" %>
    <% end %>
    </div>
  </div>
</div>