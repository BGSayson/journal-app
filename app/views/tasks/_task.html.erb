<div class=" flex flex-col bg-white bg-[linear-gradient(to_right,#f0f0f0_1px,transparent_1px),linear-gradient(to_bottom,#f0f0f0_1px,transparent_1px)] bg-[size:6rem_4rem] p-3 border-[2px] border-black border-t-0 rounded-[5px] wrap-break-word  break-all min-h-0 w-full h-full">
  <div class="flex flex-col min-w-0 min-h-0 gap-2">
    <h3 class="text-center font-semibold font-[Sora]"><%= task.task_title %></h3> 
        <div class="wrap-anywhere whitespace-break-spaces break-all flex items-start justify-center font-[Manrope]"><%= task.task_body %></div>
      <div class="flex items-center justify-end h-full p-1 pt-2 text-[#9e9e9e] hover:text-black">
        <div class="flex items-center justify-between">
          <div class="flex items-center justify-between">
            <div class="text-[1rem]">
              <%= task.created_at.localtime.to_formatted_s(:short) %>
            </div>
          </div>
          <div class="flex items-center justify-between text-[0.8rem]">
            <div>
              <%= link_to "📝", edit_category_task_path(category_id, task.id), locals: { task_id: task.id } %>
            </div>
            <div>
              <%= button_to "x", category_task_path(category_id, task.id), data:{ turbo_method: :delete, turbo_confirm: 'Are you sure?' }, method: :delete, class: "hover:text-[#5486e6] hover:underline hover:cursor-pointer text-[1rem] font-semibold" %> 
            </div>
          </div>
        </div>
      </div>
  </div>
</div>