<div class=" flex flex-col bg-white bg-[linear-gradient(to_right,#f0f0f0_1px,transparent_1px),linear-gradient(to_bottom,#f0f0f0_1px,transparent_1px)] bg-[size:6rem_4rem] gap-1 min-h-[200px] p-3 border-[2px] border-black border-t-0 rounded-[5px]">
  <div class="flex flex-col">
    <h3 class="text-center"><%= task.task_title %></h3> 
    <div><%= task.task_body %></div>
    <div class="flex">
      <div>
        <%= task.created_at.localtime.to_formatted_s(:short) %>
      </div>
      <div>
        <%= link_to "📝", edit_category_task_path(category_id, task.id), locals: { task_id: task.id } %>
      </div>
      <div>
        <%= button_to "Delete", category_task_path(category_id, task.id), data:{ turbo_method: :delete, turbo_confirm: 'Are you sure?' }, method: :delete %> 
      </div>
    </div>
  </div>
</div>